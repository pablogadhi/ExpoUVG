<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:weightSum="1"
        android:orientation="vertical" android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_weight="0.56"
            android:layout_height="60dp"
            android:layout_below="@+id/btnTweetear" />

    <EditText
        android:id="@+id/editText"
        style="@style/editText_style"
        android:layout_height="150dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="136dp"
        android:fontFamily="casual"
        android:hint="@string/hint_txt_1"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#181a19"
        android:textColorHint="#000000" />

        <TextView
            android:text="@string/hint_txt_0"
            style="@style/textView_style"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:gravity="center"
            android:textColor="#ffff"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="45dp" />

        <Button
            android:text="Seleccionar imagen"
            android:layout_height="wrap_content"
            android:id="@+id/btnImagen"
            style="@style/button_style"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="openGallery"
            android:layout_width="150dp"
            android:layout_below="@+id/editText"
            android:layout_alignStart="@+id/editText" />

        <Button
            android:text="Tweet"
            style="@style/button_style"
            android:id="@+id/btnTweetear"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_width="150dp"
            android:onClick="sendButton"
            android:layout_alignBaseline="@+id/btnImagen"
            android:layout_alignBottom="@+id/btnImagen"
            android:layout_toEndOf="@+id/btnImagen" />

    </RelativeLayout>

